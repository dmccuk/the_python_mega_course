<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 20, 20
            spacing: 5, 5
            RelativeLayout:
                ImageButton:
                    source: 'A74113_dk1.png'
                    size_hint: 0.8, 0.8
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: "Welcome to LondonIAC"
                bold: True
                font_size: '25sp'
                text_size: self.width, None
                size_hint: 1, None
                halign: 'center'
            Label:
                text: "Join our community exploring the latest IAC tools and their uses."
                italic: True
                text_size: self.width, None
                size_hint: 1, None
                halign: 'center'
            Button:
                text: "Enter"
                font_size: 30
                on_press: root.main_page()
                background_color: 1, 0, 0, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 1, 0, 0, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "All the LondonIAC information can be found here!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Login page"
            on_press: root.go_to_login()
        
<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'A74113_dk1.png'
                size_hint: .75, .75
                pos_hint: {'center_x': 0.85, 'center_y': 0.7}
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "Things to Try: Happy, sad, unloved..."
        Button:
            text: "Enlighten me"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"